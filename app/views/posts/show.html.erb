<div class="container prose p-4 md:my-4 mx-auto">

  <h2><%= @post.title %></h2>

  <p class="text-xs text-gray-500">
    <span class="font-bold">Created at:</span> <%= @post.created_at.strftime("%d %b %Y") %>
    <span class="font-bold">Last updated:</span> <%= @post.updated_at.strftime("%d %b %Y") %>
  </p>

  <p class="prose">
    <%= @post.content %>
  </p>

  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_post_path(@post), class: '' %> |
  <% end %>
  <%= link_to 'Back', posts_path, class: '' %>

</div>
