<p id="notice"><%= notice %></p>

<h1>Likes</h1>

<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Fulltext</th>
			<th>Expandedurl</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @likes.each do |like| %>
			<tr>
				<td><%= like.id %></td>
				<td><%= like.fullText %></td>
				<td><%= like.expandedUrl %></td>
				<td><%= link_to 'Show', like %></td>
				<td><%= link_to 'Edit', edit_like_path(like) %></td>
				<td><%= link_to 'Destroy', like, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= form_tag like_upload_path, multipart: true do %>
	<%= file_field_tag :js %>
	<%= submit_tag "アップ" %>
<% end %>