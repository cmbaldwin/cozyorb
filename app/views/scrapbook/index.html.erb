<%= javascript_pack_tag 'tippyjs', 'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag 'flatpickr', 'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag 'shuffle', 'data-turbolinks-track': 'reload' %>

<div class="m-2 md:m-4 p-2 md:p-4 text-center flex place-items-center place-content-center content-center">
  <%= button_tag "üîé", 'data-turbolinks': 'false', class: 'btn btn-sm no-focus help_tip flex-initial w-50 text-large', "data-tippy-content" => help_markdown %>
    <div class="sr-only">
      <%= help_markdown %> 
    </div>
    <div class="px-2 flex-initial w-50">
      <div class="container flex place-items-center place-content-center content-center">
        <%= link_to("‚èÆ", scrapbook_path(date: @search_date - 1.month), class: "tippy pl-1 text-lg", "data-tippy-content" => "Back one month")%> 
        <%= link_to("‚è™", scrapbook_path(date: @search_date - 1.day), class: "tippy pl-1 text-lg", "data-tippy-content" => "Back one day") %> 
        <span class="px-1 d-inline-block w-50">
          <%= form_tag(scrapbook_path, method: :get, class:'p-0 m-0') do %>
              <%= text_field_tag :date, params[:date], class: 'flatpickr text-center rounded p-0 m-0' %>
          <% end %>
        </span>
        <%= link_to("‚è©", scrapbook_path(date: @search_date + 1.day), class: "tippy pl-1 text-lg", "data-tippy-content" => "Forward one day") %> 
        <%= link_to("‚è≠", scrapbook_path(date: @search_date + 1.month), class: "tippy pl-1 text-lg", "data-tippy-content" => "Forward one month") %>
      </div>
    </div>
</div>

<div class="scrapbook m-2 md:m-4 p-2 lg:p-4">
  <% @all_posts.sort{|p| p.created_at }.reverse.each do |post| %>
    <% unless post.nil? %>
      <% tweet = post.class.name == 'Tweet' %>
      <div class="container scrap sizer w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
        <div class="m-2 md:m-4 p-2 lg:p-4 rounded-lg <%= owned_tweet(post, tweet) %>">
          <div class="top-0 right-1 absolute p-4 opacity-50">
            <%= post_type_icon(post) %>
          </div>
          <div class="prose">
            <% if tweet %>
              <% if post.retweeted %>
                ‚ôªÔ∏è <%= post.retweeted_text[:text].html_safe %>
              <% else %>
                <%= (post.text_with_links).html_safe  %>
              <% end %>
            <% else %>
              <b><%= link_to(post.screen_name, post.user_url) %></b><br>
              <%= (post.text_with_links).html_safe  %>
            <% end %>
          </div>
          <div class="text-sm text-neutral-500">
            <i><%= link_to post.created_at, post.url, class: "text-muted" %></i><br>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<% if @all_posts.empty? %>
  <div class="grid">
    <div class="prose text-center">
      No tweets found for this day or search.
    </div>
  </div>
<% end %>